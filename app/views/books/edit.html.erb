<body class="edit-page">


  <h3>Editing Book</h3>

  <%= form_with model: @book, local:true do |f| %>

    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2 class="error-title"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul class="error-message">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="edit-container">
      <p>title</p>
      <%= f.text_field :title %>
    </div>

    <div class="edit-container">
      <p>body</p>
      <%= f.text_field :body %>
    </div>

    <p class="edit-update-btn">
    <%= f.submit 'Update Book' %>
    </p>

    <%= link_to "show", @book %>
    |
    <a href="/books">Back</a>
  <% end %>


</body>

