<body class="books-body">
  <h1 class="books-header">Books</h1>
  <table class="books-table">
    <thead class="books-thead">
      <th>Title</th>
      <th>Body</th>
    </thead>

    <% @books.each do |book| %>

    <tbody class="books-tbody">
      <tr>
        <td class="books-td"><%= book.title %></td>
        <td class="books-td"><%= book.body %></td>
        <td class="books-td books-table-link"><%= link_to "show", book_path(book.id) %></td>
        <td class="books-td books-table-link"><%= link_to "edit", edit_book_path(book) %></td>
        <td class="books-td books-table-link"><%= link_to "Destroy", book_path(book), method: :delete %></td>
      </tr>
    </tbody>

    <% end %>

  </table>



  <h1 class="books-new-head">New book</h1>

    <%= form_with model: @book, local:true do |f| %>

      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2 class="error-title"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

          <ul class="error-message">
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h4>title</h4>
      <%= f.text_field :title %>
      <h4>body</h4>
      <%= f.text_field :body %>
      <div class="books-create-btn">
      <%= f.submit 'Create Book' %>
      </div>
    <% end %>

</body>
